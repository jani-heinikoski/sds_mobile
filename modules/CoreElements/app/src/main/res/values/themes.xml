<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoreElements" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- No title/default actionbar -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Default theme coloring -->
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:navigationBarColor">?attr/colorPrimarySurface</item>
        <item name="colorError">@color/error_color</item>


    </style>
</resources>