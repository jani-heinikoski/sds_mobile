<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">?attr/colorPrimarySurface</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextOnBackground">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CustomButton" parent="TextOnBackground">
        <item name="android:stateListAnimator">@animator/custom_button_state_list_animator</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>