<?xml version="1.0" encoding="utf-8"?><!-- Modified from source: Pieters M., 2013. How to Customize a Progress Bar In Android - Stackoverflow. [Website, answer to a question]. Referred 15.12.2020. Available https://stackoverflow.com/questions/16893209/how-to-customize-a-progress-bar-in-android -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/windowBackground" />
            <corners android:radius="18dp" />
            <stroke
                android:width="2dp"
                android:color="?attr/colorAccent" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="18dp" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/red_dark"
                    android:startColor="?android:attr/windowBackground" />
                <stroke
                    android:width="2dp"
                    android:color="?attr/colorAccent" />
            </shape>
        </clip>
    </item>
</layer-list>