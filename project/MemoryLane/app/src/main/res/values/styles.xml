<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.Horizontal.GameProgressBar">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="elevation">8dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">5000</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/game_progress_bar</item>
    </style>

    <style name="GameGridButtonMargin">
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>