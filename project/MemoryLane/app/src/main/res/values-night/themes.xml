<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemoryLane" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- No title/default actionbar -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Bottom navbar color -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <!-- Surface colors -->
        <item name="colorPrimarySurface">@color/surface_primary_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- Background -->
        <item name="colorOnBackground">@color/white</item>
        <!-- Game Buttons  -->
        <item name="gameButton1Normal">@color/game_button_1_normal_dark</item>
        <item name="gameButton2Normal">@color/game_button_2_normal_dark</item>
        <item name="gameButton3Normal">@color/game_button_3_normal_dark</item>
        <item name="gameButton4Normal">@color/game_button_4_normal_dark</item>
    </style>
</resources>